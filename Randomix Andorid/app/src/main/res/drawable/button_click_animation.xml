<!-- res/drawable/rounded_text_with_stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DEDED6" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Thin stroke around the text background -->
    <item android:left="-100dp" android:right="1dp" android:top="15dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="990dp" />
            <stroke android:color="@android:color/black" android:width="1dp" />
        </shape>
    </item>
</layer-list>
